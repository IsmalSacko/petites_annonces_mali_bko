{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <div class="container">
       <div class="header text-center">
           <h1>Contact index</h1>
           <img class="image_border bg-light" src="{{ asset('usersimages/envelope-regular.svg') }}" alt="">

       </div>

        <table class="table table-hover table-dark">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Sujet</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }} </td>
                    <td>{{ contact.nom }}</td>
                    <td>{{ contact.sujet }}</td>
                    <td>{{ contact.message }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('contact_show', {'id': contact.id}) }}">

                            <i class="fas fa-eye"></i>
                        </a>
                        {% if app.user and app.user == ad.author %}
                        <a class="btn btn-primary" href="{{ path('contact_edit', {'id': contact.id}) }}">
                            <i class="fas fa-pen"></i>
                        </a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if app.user %}
        <a class="btn btn-primary" href="{{ path('contact_new') }}">Create new</a>
        {% endif %}
    </div>
{% endblock %}
