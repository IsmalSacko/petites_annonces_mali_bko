{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container table-light">
        <div class="header text-center">
        <h1>Contact</h1>

            <img class="image_border bg-light" src="{{ asset('usersimages/envelope-regular.svg') }}" alt="">

        </div>

        <table class="table table-hover ">
            <tbody>
            <tr>

                <th><i class="far fa-envelope"></i></th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.nom }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ contact.sujet }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            </tbody>

        </table>

        {% if app.user and app.user == ad.author %}
        {{ include('contact/_delete_form.html.twig') }}
    {% endif %}
            <p class="text-center py-2">
                <a class="btn btn-primary" href="{{ url('contact_show', {'id': contact.id }) }}">En savoir plus</a>
            </p>
    </div>
{% endblock %}
