{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <h1>Annonces</h1>
    <div class="ad-title text-success bg-white" style="background-image: url('/uploads/{{ ads.image }}')">
        <div class="container">
            <h1>{{ ads.title }}</h1>
            <p>{{ ads.introduction }}</p>
            <p class="h2">
                <strong>{{ ads.nombreAd }} </strong> articles pour <strong>{{ ads.price }} FCFA</strong> chacun
            </p>
            <p class="text-center"><a class="btn btn-success" href="{{ path('annonces_show', {'slug':ads.slug}) }}" role="button">Voir l'article</a></p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-3 text-justify">
                {{ ads.content | raw }}
                <div id="carouselExampleIndicators" class="carousel slide col-lg-9 col-md-8 col-sm-8" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in ads.images  %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in ads.images  %}
                            <div class="carousel-item {% if loop.first %} active {% endif %}">
                                <a href="/uploads/{{ image.url }}">
                                    <img class="d-block w-100" src="/uploads/{{ image.url }}"  alt="first slide">
                                </a>
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{ ads.title }}</h5>
                                    <p>{{ image.description }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                {# fin corrousel#}
            </div>

                <div class="col mt-5">
                    <div class="row mb-3 align-items-center">
                        {% if user is same as(app.user) %}
                            {% set a = ads.author %}
                            <div class="col-4">
                                <a href="{{ path('user_show', {'slug': a.slug }) }}">
                                    <img class="image_border" src="/usersimages/{{ a.picture }}" alt="Image du vendeur" class="float-left mr-3">
                                </a>

                            </div>
                            <div class="row">
                                <div class="col">
                                    <a href="{{ path('user_show', {'slug': a.slug }) }}">
                                        <h3>{{ a.fullName }}</h3>
                                    </a>
                                    <span class="badge badge-primary">{{ ads.nombreAd }} annonce(s)</span>
                                </div>
                            </div>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consectetur
                                facilis nesciunt numquam odio praesentium quae qui, temporibus tenetur totam
                                velit.
                            </p>
                            <a class="btn btn-primary" href="{{ path('user_show', {'slug': a.slug}) }}" >En savoir plus !</a>

                        {% endif %}

                    </div>
                </div>



        </div>
    </div>
    {% if user is same as(app.user) %}
        <div class="row">
            <div class="col-4">
                <a class="btn bg-info" href="{{ path('annonces_index') }}">Go back</a>

                <a class="btn btn-primary" href="{{ path('annonces_edit', {'slug': ads.slug}) }}">edit</a>
            </div>
        </div>
        {{ include('annonces/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
