{% extends "admin/ad/base.html.twig" %}
{% block title %}Modification d'un panier{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="alert alert-warning text-center">Modification du panier n°{{ achats.id }}</h1>
        {{ form_start(form) }}
        <div class="card alert-light">
            <div class="card header">
                <h4 class="card-title alert alert-info">
                    Modification du panier de :<br>
                    {{ achats.acheteur.fullName }}<br>
                    Lié à l'annonce {{ achats.annonce.author.fullName }}<br>
                    Créer le {{ achats.createdAt | date('d/m/Y H:i') }}<br>
                    Pour un montant : {{ achats.amount}} FCFA
                </h4>
                <div class="card-body">
                    {{ form_widget(form) }}
                    <button class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}


