{% extends 'admin/ad/base.html.twig' %}

{% block title %}Administration des annonces !{% endblock %}
{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonces</h1>
        <table class="table table-hover table-dark">
            <tr>
                <th>Id</th>
                <th class="text-center">Titre</th>
                <th class="text-center">Auteur</th>
                <th class="text-center">Note</th>
                <th class="text-center">Actions</th>
            </tr>
            <tbody>
            {% for ad in  ads %}
                <tr>
                    <td>{{ ad.id }}</td>
                    <td class="text-center">{{ ad.title }}</td>
                    <td class="text-center"><img class="image_border avatar-mini mr-2" src="/usersimages/{{ ad.author.picture }}"
                             alt="">{{ ad.author.fullName }}</td>
                    <td class="text-center">
                        <span class="badge badge-primary">{{ ad.author.achats.count }}</span>
                    </td>
                    <td class="text-center">
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger ml-1"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
